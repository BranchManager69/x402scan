{
  "name": "x402scan",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter scan dev",
    "dev:scan": "pnpm --filter scan dev",
    "dev:sync": "pnpm --filter sync trigger:dev",
    "build": "pnpm -r build",
    "build:scan": "pnpm --filter scan build",
    "build:sync": "pnpm --filter sync build",
    "lint": "pnpm -r lint",
    "lint:scan": "pnpm --filter scan lint",
    "lint:sync": "pnpm --filter sync lint",
    "format": "prettier --write .",
    "format:scan": "pnpm --filter scan format",
    "format:sync": "pnpm --filter sync format",
    "check": "pnpm check:format && pnpm check:types && pnpm lint",
    "check:scan": "pnpm --filter scan check:format && pnpm --filter scan check:types && pnpm --filter scan lint",
    "check:sync": "pnpm --filter sync check:format && pnpm --filter sync check:types && pnpm --filter sync lint",
    "check:facilitators": "tsc --noEmit --project facilitators/tsconfig.json",
    "check:format": "prettier --check .",
    "check:types": "pnpm check:facilitators && pnpm -r check:types",
    "check:types:scan": "pnpm --filter scan check:types",
    "check:types:sync": "pnpm --filter sync check:types",
    "db:generate": "pnpm -r db:generate",
    "db:push": "pnpm -r db:push",
    "db:migrate:dev": "pnpm -r db:migrate:dev",
    "db:migrate:prod": "pnpm -r db:migrate:prod",
    "db:studio:scan": "pnpm --filter scan db:studio",
    "db:studio:sync": "pnpm --filter sync db:studio",
    "trigger:dev": "pnpm --filter sync trigger:dev",
    "trigger:deploy": "pnpm --filter sync trigger:deploy"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "prettier": "^3.6.2",
    "typescript": "^5",
    "typescript-eslint": "^8.46.2"
  },
  "pnpm": {
    "overrides": {
      "@auth/core": "0.40.0"
    }
  }
}
